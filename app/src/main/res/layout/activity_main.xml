<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_x="0dp"
        android:layout_y="26dp"
        android:text="Add a New Student"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_x="-2dp"
        android:layout_y="87dp"
        android:textStyle="bold"
        android:paddingLeft="6dp"
        android:text="Enter Student Id :" />

    <EditText
        android:id="@+id/editTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_x="1dp"
        android:layout_y="116dp"
        android:hint="Id"
        android:inputType="text"
        android:paddingRight="6dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_x="-5dp"
        android:textStyle="bold"
        android:layout_y="168dp"
        android:paddingLeft="6dp"
        android:text="Enter Student Name :" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_x="-1dp"
        android:layout_y="194dp"
        android:hint="Enter Full Name"
        android:inputType="textPersonName"
        android:paddingRight="6dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_x="-2dp"
        android:layout_y="253dp"
        android:paddingLeft="6dp"
        android:text="Enter Phone Number :" />

    <EditText
        android:id="@+id/editTextPhn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_x="2dp"
        android:layout_y="277dp"
        android:hint="Phone Number"
        android:inputType="phone"
        android:paddingRight="6dp" />

    <Button
        android:id="@+id/AddStud"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_x="3dp"
        android:layout_y="340dp"
        android:onClick="addstud"
        android:padding="16dp"
        android:text="ADD"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/viewStud"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_x="177dp"
        android:layout_y="340dp"
        android:onClick="viewStud"
        android:padding="16dp"
        android:text="View All Students"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_x="0dp"
        android:layout_y="407dp"
        android:paddingLeft="6dp"
        android:text="Enter Student Name to Delete :"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/deleteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="436dp"
        android:ems="10"
        android:hint="Student Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="7dp"
        android:layout_y="486dp"
        android:textStyle="bold"
        android:text="Delete"
        android:onClick="delete"/>

</AbsoluteLayout>